<table class="grid-view margin-bottom responsive" summary="Contacts List">
    <thead>
    <tr>
        <th>Name</th>
        <th>Relationship Type</th>
        <th>Primary Phone</th>
        <th>Email</th>
        <th>Actions</th>
    </tr>
    </thead>

    <tbody>
    <% relationships.each do |r| %>
      <tr>
          <td><%= r.contact.display_name %></td>
          <td><%= Relationship.reflex_association_type r.association_type %></td>
          <td><%= r.contact.primary_phone %></td>
          <td><%= r.contact.email %></td>
          <td>
              <%= link_to 'Edit', edit_contact_relationship_path(r.user, r), :title => 'Edit', :class => 'edit table-action' %>
              <%= link_to 'Destroy', contact_relationship_path(r.user, r), method: :delete, data: {confirm: 'Are you sure?'}, :title => 'Delete', :class => 'delete table-action' %>
          </td>
      </tr>
    <% end %>
    </tbody>
</table>