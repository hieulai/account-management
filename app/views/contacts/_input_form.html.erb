<%= form_for @user, :as => :user, url: @user.new_record? ? contacts_path : contact_path, :html => {:class => 'form-horizontal', data: {name: 'input_form'}} do |f| %>
  <% if @user.errors.any? %>
    <div id="error_explanation">
        <h2><%= pluralize(@user.errors.count, "error") %> prohibited this contact from being saved:</h2>
        <ul>
            <% @user.errors.full_messages.each do |message| %>
              <li><%= message %></li>
            <% end %>
        </ul>
    </div>
  <% end %>
  <% is_company_contact = is_a_company_contact? @user
     company_contact_display = is_company_contact ? "" : "none"
     self_employed_display = is_company_contact ? "none" : ""
  %>
  <% if @user.is_a? PersonUser %>
    <div class="control-group">
        <%= label_tag :type_name, "Job", class: 'col-lg-2 control-label' %>
        <div class="controls">
            <%= f.radio_button(:job_type, Constants::SELF_EMPLOYED, checked: !is_company_contact) %>
            <%= f.label(:job_type_self_employed, "Is self-employed") %>
            <br/>
            <%= f.radio_button(:job_type, Constants::COMPANY_CONTACT, checked: is_company_contact) %>
            <%= f.label(:job_type_company_contact, "Work for Company") %>
        </div>
    </div>

    <div class="control-group" data-name="company_contact" data-class="job_type" style="display: <%= company_contact_display %>">
        <%= label_tag :company_name, "Company", class: 'col-lg-2 control-label' %>
        <div class="controls">
            <%= f.fields_for :relationships, is_company_contact ? @user.source_employee_relationships.first : Relationship.new do |p| %>
              <%= p.hidden_field :id %>
              <%= p.hidden_field :association_type, value: Constants::EMPLOYEE %>
              <%= p.select :contact_id, root_user.company_contacts.collect { |s| [s.display_name, s.id] } %>
              <%= p.hidden_field :"_destroy", value: !is_company_contact %>
            <% end %>
        </div>
    </div>
  <% end %>

  <div class="control-group" data-name="self_employed" data-class="job_type" style="display: <%= self_employed_display %>">
      <%= f.label :type, 'Relationships', class: 'col-lg-2 control-label' %>
      <div class="controls">
          <%= f.fields_for :relationships, relationships_for(@user) do |p| %>
            <%= render :partial => 'shared/relationship_input', locals: {p: p, u: @user} %>
          <% end %>
      </div>
  </div>

  <% if @user.is_created_by? root_user %>
    <%= f.hidden_field :type %>
    <%= f.hidden_field :skip_existing_checking %>

    <%= f.fields_for :"#{@profile.class.name.underscore.pluralize}", @profile do |p| %>
      <%= render :partial => "shared/#{@profile.class.name.underscore}/#{@user.class.name.underscore}_form", :locals => {:p => p} %>
    <% end %>

    <% if @user.is_a? PersonUser %>
      <div class="control-group">
          <%= f.label :email, "Email", :class => 'col-lg-2 control-label' %>
          <div class="controls">
              <%= f.text_field(:email) %>
          </div>
      </div>
    <% end %>

  <% end %>
  <div class="control-group">
      <div class="controls">
          <%= f.submit "Save", :class => 'btn' %>
          <%= link_to "Cancel", contacts_path, :class => 'btn' %>
      </div>
  </div>
<% end %>