<% content_for :sub_navigation do %>
  <%= render(:partial => "layouts/sub_navigation/people") %>
<% end %>
<div>
    <div class="zurb-row main-action-bar">
        <div class="large-3 medium-4 columns">
            <%= link_to("View >>", contact_path(@user), :title => 'View', :class => 'view-large action-button') %>
            <%= link_to("Edit >>", edit_contact_path(@user), :title => 'Edit', :class => 'edit-large action-button') %>
        </div>
        <div class="large-6 medium-6 columns">
            <h1 class="center">
                Delete Contact
            </h1>
        </div>
        <div class="large-3 medium-2 columns">
        </div>
    </div>
    <div class="zurb-row">
        <div class="columns">
            <%= render :partial => 'shared/errors', :locals => {:object => @user} %>
            <p>Are you sure you want to delete this contact?</p>
            <%= link_to("Delete", contact_path(@user), method: :delete, :title => 'Delete', :class => 'btn btn-danger') %>
        </div>
    </div>
</div>