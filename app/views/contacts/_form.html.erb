<%= form_for @user, url: @user.new_record? ? contacts_path : contact_path, :html => {:class => 'form-horizontal'} do |f| %>
  <% if @user.errors.any? %>
    <div id="error_explanation">
        <h2><%= pluralize(@user.errors.count, "error") %> prohibited this user from being saved:</h2>

        <ul>
            <% @user.errors.full_messages.each do |message| %>
              <li><%= message %></li>
            <% end %>
        </ul>
    </div>
  <% end %>

  <div class="actions">
      <%= f.hidden_field :type %>

      <% if @role && @contact_id %>
        <%= f.fields_for :associations, @user.associations.first || Association.new do |p| %>
          <%= p.hidden_field :association_type, value: @role %>
          <%= p.hidden_field :contact_id, value: @contact_id %>
        <% end %>
      <% end %>

      <% if @user.is_a? CompanyUser %>
        <%= f.fields_for :companies, @user.companies.first || Company.new do |p| %>
          <%= render :partial => 'company_user_form', :locals => {:p => p} %>
        <% end %>
      <% else %>
        <%= f.fields_for :people, @user.people.first || Person.new do |p| %>
          <%= render :partial => 'person_user_form', :locals => {:p => p} %>
        <% end %>
      <% end %>

      <%= f.submit "Save", :class => 'btn' %>
  </div>
<% end %>
