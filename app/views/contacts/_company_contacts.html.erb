<table class="grid-view margin-bottom responsive" summary="Contacts List">
    <thead>
    <tr>
        <th>Name</th>
        <th>Primary Phone</th>
        <th>Email</th>
        <th>Actions</th>
    </tr>
    </thead>

    <tbody>
    <% users.each do |user| %>
      <tr>
          <td><%= user.display_name %></td>
          <td><%= user.primary_phone %></td>
          <td><%= user.email  %></td>
          <td>

              <%= link_to 'Show', contact_path(user), :title => 'Show', :class => 'view table-action' %>
              <%= link_to 'Relationships', contact_relationships_path(user) , :title => 'Relationships', :class => 'connections table-action' %>
          </td>
      </tr>
    <% end %>
    </tbody>
</table>