<% if profile.user.employers.any? %>
  <p>
      <b><%= "Company:" %></b>
      <%= profile.user.employers.first.display_name %>
  </p>
<% end %>

<p>
    <b><%= "First Name:" %></b>
    <%= profile.first_name %>
</p>

<p>
    <b><%= "Last Name:" %></b>
    <%= profile.last_name %>
</p>

<% if profile.phone_tag_1 %>
  <p>
      <b><%= profile.phone_tag_1 %>:</b>
      <%= number_to_phone(profile.phone_1, :area_code => true) %>
  </p>
<% end %>

<% if profile.phone_tag_2 %>
  <p>
      <b><%= profile.phone_tag_2 %>:</b>
      <%= number_to_phone(profile.phone_2, :area_code => true) %>
  </p>
<% end %>

<p>
    <b><%= "Email:" %></b>
    <%= profile.user.email %>
</p>

<p>
    <b><%= "Website:" %></b>
    <% if profile.website %>
      <%= link_to profile.website, "http://#{profile.website}" %>
    <% end %>
</p>

<p>
    <b><%= "Address Line 1:" %></b>
    <%= profile.address_line_1 %>
</p>

<p>
    <b><%= "Address Line 2:" %></b>
    <%= profile.address_line_2 %>
</p>

<p>
    <b><%= "City:" %></b>
    <%= profile.city %>
</p>

<p>
    <b><%= "State:" %></b>
    <%= profile.state %>
</p>

<p>
    <b><%= "Zipcode:" %></b>
    <%= profile.zipcode %>
</p>
<p>
    <b><%= "Last Updated:" %></b>
    <%= time_tag profile.updated_at %>
</p>
