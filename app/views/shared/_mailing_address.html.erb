<% if user.is_a? PersonUser %>
  <%= user.email %>
<% else %>
  <%= "#{user.profile.address_line_1}" %> <%= raw("<br/>") if user.profile.address_line_1.present? %>
  <%= "#{user.profile.address_line_2}" %> <%= raw("<br/>") if user.profile.address_line_2.present? %>
  <%= user.city %> <%= ", #{user.state}" if user.state.present? %> <%= ", #{user.zipcode}" if user.zipcode.present? %>
<% end %>